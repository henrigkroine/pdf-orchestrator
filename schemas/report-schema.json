{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Premium Report Job Schema",
  "description": "Schema for premium report generation jobs with intent-aware validation",
  "type": "object",
  "required": ["jobType", "data", "output"],
  "properties": {
    "jobType": {
      "type": "string",
      "enum": ["report", "partnership", "program"],
      "description": "Type of premium PDF generation job"
    },
    "templateId": {
      "type": "string",
      "description": "ID of the InDesign/Illustrator template to use"
    },
    "humanSession": {
      "type": "boolean",
      "default": false,
      "description": "If true, routes to MCP worker for interactive session"
    },
    "data": {
      "type": "object",
      "required": ["title", "content"],
      "properties": {
        "title": {
          "type": "string",
          "description": "Report title"
        },
        "subtitle": {
          "type": "string",
          "description": "Optional subtitle"
        },
        "content": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["type"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["text", "chart", "table", "image"]
              },
              "content": {
                "description": "Content varies by type"
              }
            }
          }
        },
        "metadata": {
          "type": "object",
          "properties": {
            "author": { "type": "string" },
            "date": { "type": "string", "format": "date" },
            "organization": { "type": "string" }
          }
        }
      }
    },
    "output": {
      "type": "object",
      "required": ["format", "intent", "quality"],
      "properties": {
        "format": {
          "type": "string",
          "enum": ["pdf", "pdf-print", "pdf-interactive"]
        },
        "intent": {
          "type": "string",
          "enum": ["print", "screen"],
          "description": "Delivery intent: print (300 DPI, CMYK) or screen (150 DPI, RGB)"
        },
        "quality": {
          "type": "string",
          "enum": ["high"],
          "description": "Quality level - premium docs require 'high' quality"
        },
        "destination": {
          "type": "string",
          "description": "Output path or R2 bucket key"
        },
        "accessibility": {
          "type": "string",
          "enum": ["autotag"],
          "description": "Optional: Enable PDF accessibility auto-tagging (adds cost)"
        }
      }
    },
    "worldClass": {
      "type": "boolean",
      "description": "If true, uses world-class Python CLI for highest quality output"
    }
  }
}
