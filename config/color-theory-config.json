{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Color Theory Configuration",
  "description": "Configuration for color harmony and palette generation",

  "colorTheories": {
    "complementary": {
      "name": "Complementary",
      "description": "Colors opposite on the color wheel",
      "angle": 180,
      "colorCount": 2,
      "character": "High contrast, vibrant, energetic",
      "bestFor": ["Call-to-action", "Bold statements", "High energy brands"],
      "examples": ["Red & Green", "Blue & Orange", "Yellow & Purple"],
      "difficulty": "Easy to overuse, requires careful balance"
    },
    "splitComplementary": {
      "name": "Split-Complementary",
      "description": "Base color plus two adjacent to complement",
      "angles": [150, 210],
      "colorCount": 3,
      "character": "Harmonious, warm, balanced",
      "bestFor": ["Professional documents", "Educational materials", "Warm brands"],
      "examples": ["Blue, Yellow-Orange, Red-Orange"],
      "recommended": true,
      "teeiDefault": true
    },
    "triadic": {
      "name": "Triadic",
      "description": "Three colors equally spaced (120Â° apart)",
      "angles": [120, 240],
      "colorCount": 3,
      "character": "Balanced, dynamic, vibrant",
      "bestFor": ["Playful brands", "Multi-category content", "Diverse audiences"],
      "examples": ["Red, Yellow, Blue", "Orange, Green, Purple"],
      "difficulty": "Can be overwhelming if all colors are equally saturated"
    },
    "tetradic": {
      "name": "Tetradic (Double Complementary)",
      "description": "Four colors in two complementary pairs",
      "angles": [60, 180, 240],
      "colorCount": 4,
      "character": "Rich, complex, sophisticated",
      "bestFor": ["Complex systems", "Multi-brand collaborations", "Rich editorial"],
      "examples": ["Red, Orange, Blue, Green"],
      "difficulty": "Hard to balance, needs one dominant color"
    },
    "analogous": {
      "name": "Analogous",
      "description": "Adjacent colors on the color wheel",
      "angles": [-30, 30],
      "colorCount": 3,
      "character": "Peaceful, harmonious, serene",
      "bestFor": ["Calming brands", "Nature themes", "Cohesive designs"],
      "examples": ["Blue, Blue-Green, Green", "Red, Red-Orange, Orange"],
      "difficulty": "Can lack contrast, needs careful hierarchy"
    },
    "monochromatic": {
      "name": "Monochromatic",
      "description": "Variations of a single hue",
      "angles": [],
      "colorCount": "3+",
      "character": "Elegant, sophisticated, cohesive",
      "bestFor": ["Minimalist brands", "Elegant products", "Focused content"],
      "examples": ["Light Blue, Medium Blue, Dark Blue"],
      "difficulty": "Can be boring, needs variety in value and saturation"
    }
  },

  "wcag": {
    "description": "WCAG 2.1 Color Contrast Requirements",
    "levels": {
      "aa": {
        "normalText": {
          "ratio": 4.5,
          "description": "18pt or smaller, any weight"
        },
        "largeText": {
          "ratio": 3.0,
          "description": "18pt+ regular or 14pt+ bold"
        }
      },
      "aaa": {
        "normalText": {
          "ratio": 7.0,
          "description": "Enhanced contrast for better accessibility"
        },
        "largeText": {
          "ratio": 4.5,
          "description": "Enhanced contrast for large text"
        }
      }
    },
    "reference": "https://www.w3.org/WAI/WCAG21/Understanding/contrast-minimum.html"
  },

  "colorBlindness": {
    "types": {
      "protanopia": {
        "name": "Protanopia (Red-Blind)",
        "prevalence": "1% of males",
        "description": "Cannot perceive red light",
        "affectedColors": ["Red", "Green", "Brown", "Orange"]
      },
      "deuteranopia": {
        "name": "Deuteranopia (Green-Blind)",
        "prevalence": "1% of males",
        "description": "Cannot perceive green light",
        "affectedColors": ["Red", "Green", "Brown", "Purple"]
      },
      "tritanopia": {
        "name": "Tritanopia (Blue-Blind)",
        "prevalence": "< 0.01%",
        "description": "Cannot perceive blue light",
        "affectedColors": ["Blue", "Yellow", "Green", "Purple"]
      },
      "protanomaly": {
        "name": "Protanomaly (Red-Weak)",
        "prevalence": "1% of males",
        "description": "Reduced sensitivity to red light"
      },
      "deuteranomaly": {
        "name": "Deuteranomaly (Green-Weak)",
        "prevalence": "5% of males, 0.4% of females",
        "description": "Reduced sensitivity to green light",
        "mostCommon": true
      },
      "tritanomaly": {
        "name": "Tritanomaly (Blue-Weak)",
        "prevalence": "< 0.01%",
        "description": "Reduced sensitivity to blue light"
      },
      "achromatopsia": {
        "name": "Achromatopsia (Total Color Blindness)",
        "prevalence": "< 0.00003%",
        "description": "Cannot perceive any color, sees only grayscale"
      },
      "achromatomaly": {
        "name": "Achromatomaly (Partial Color Blindness)",
        "prevalence": "Rare",
        "description": "Partial loss of color vision"
      }
    },
    "bestPractices": [
      "Don't rely on color alone to convey information",
      "Use patterns, icons, or labels in addition to color",
      "Ensure sufficient contrast between colors",
      "Avoid red-green combinations for critical info",
      "Test designs with color blindness simulators",
      "Use high-contrast color pairs",
      "Provide alternative ways to distinguish elements"
    ]
  },

