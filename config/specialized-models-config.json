{
  "description": "Configuration for specialized AI model orchestrator",
  "version": "2.0.0",
  "lastUpdated": "2025-11-25",

  "models_in_use": ["Claude Opus 4.5", "Gemini Pro 3.0", "GPT-5.1"],

  "tiers": {
    "standard": {
      "description": "All three models for comprehensive validation",
      "models": ["claude-opus-4.5", "gemini-pro-3.0", "gpt-5.1"],
      "costPerPage": 0.02,
      "estimatedSpeed": "2-3s/page",
      "accuracy": "98-99%",
      "useCase": "All documents, production workflows, critical deliverables"
    }
  },

  "models": {
    "claude-opus-4.5": {
      "name": "Claude Opus 4.5",
      "provider": "Anthropic",
      "enabled": true,
      "use_case": "Brand compliance, typography, layout critique",
      "weight": 0.35,
      "cost_per_page": 0.015,
      "strengths": [
        "Best-in-class vision capabilities",
        "Extended thinking for deep reasoning",
        "Typography and font analysis",
        "Layout and composition critique",
        "200K context window"
      ],
      "config": {
        "model": "claude-opus-4-5-20251001",
        "requires": "ANTHROPIC_API_KEY",
        "maxOutputTokens": 8192,
        "temperature": 0.2,
        "thinkingEnabled": true,
        "thinkingBudget": 10000
      }
    },

    "gemini-pro-3.0": {
      "name": "Gemini Pro 3.0",
      "provider": "Google",
      "enabled": true,
      "use_case": "Document analysis, cross-page consistency, visual validation",
      "weight": 0.35,
      "cost_per_page": 0.025,
      "strengths": [
        "2M token context window",
        "Cross-page consistency checking",
        "Multi-page document analysis",
        "Superior visual understanding",
        "Deep reasoning capabilities"
      ],
      "accuracy_improvement": "+10% on document-wide issues",
      "config": {
        "model": "gemini-3.0-pro",
        "requires": "GEMINI_API_KEY",
        "maxOutputTokens": 8192,
        "temperature": 0.1
      }
    },

    "gpt-5.1": {
      "name": "GPT-5.1",
      "provider": "OpenAI",
      "enabled": true,
      "use_case": "Quality assessment, accessibility, cross-validation",
      "weight": 0.30,
      "cost_per_page": 0.015,
      "strengths": [
        "Natively multimodal",
        "Superior visual perception",
        "Overall design quality assessment",
        "Professional appearance evaluation",
        "Accessibility considerations"
      ],
      "config": {
        "model": "gpt-5.1",
        "requires": "OPENAI_API_KEY",
        "maxOutputTokens": 8192,
        "temperature": 0.2
      }
    },

    "layout": {
      "name": "Vision Transformer (ViT)",
      "provider": "Xenova/HuggingFace",
      "enabled": true,
      "use_case": "Layout analysis and grid detection (local)",
      "weight": 0.15,
      "cost_per_page": 0,
      "strengths": [
        "Grid structure detection",
        "Spacing measurement",
        "Alignment verification",
        "Fast local processing"
      ],
      "config": {
        "model": "Xenova/vit-base-patch16-224",
        "device": "auto"
      }
    }
  },

  "weights": {
    "description": "Model weights for ensemble voting",
    "claude-opus-4.5": 0.35,
    "gemini-pro-3.0": 0.35,
    "gpt-5.1": 0.30
  },

  "recommendations": {
    "standard": {
      "when": "All validation tasks - production workflows, client documents, final deliverables",
      "benefits": "Maximum accuracy (98-99%), all three premium models, comprehensive analysis",
      "costJustification": "Prevents costly revisions and brand violations"
    }
  },

  "expectedImprovements": {
    "overall": {
      "metric": "Comprehensive validation accuracy",
      "accuracy": "98-99%",
      "models": "Claude Opus 4.5 + Gemini Pro 3.0 + GPT-5.1"
    }
  },

  "apiKeys": {
    "required": ["ANTHROPIC_API_KEY", "GEMINI_API_KEY", "OPENAI_API_KEY"],
    "setup": {
      "anthropic": "Get key at: https://console.anthropic.com/",
      "gemini": "Get key at: https://ai.google.dev/",
      "openai": "Get key at: https://platform.openai.com/"
    }
  },

  "commands": {
    "validate": "node scripts/validate-pdf-ai-vision.js <pdf-path>",
    "compare": "node scripts/compare-specialist-models.js <pdf-path>"
  }
}
