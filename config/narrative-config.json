  "pacing": {
    "strategies": {
      "fast": {
        "name": "Fast Pacing",
        "wordDensity": "high",
        "whitespace": "minimal",
        "imageRatio": "low",
        "readingSpeed": 300,
        "description": "High information density with minimal breaks",
        "bestFor": ["News", "Updates", "Quick reads"],
        "breathingPointInterval": 300
      },
      "moderate": {
        "name": "Moderate Pacing",
        "wordDensity": "balanced",
        "whitespace": "comfortable",
        "imageRatio": "balanced",
        "readingSpeed": 250,
        "description": "Balanced rhythm with regular breathing points",
        "bestFor": ["Reports", "Proposals", "General documents"],
        "breathingPointInterval": 200
      },
      "slow": {
        "name": "Slow Pacing",
        "wordDensity": "low",
        "whitespace": "generous",
        "imageRatio": "high",
        "readingSpeed": 200,
        "description": "Contemplative and spacious with rich imagery",
        "bestFor": ["Portfolios", "Art books", "Luxury content"],
        "breathingPointInterval": 150
      },
      "varied": {
        "name": "Varied Pacing",
        "wordDensity": "mixed",
        "whitespace": "dynamic",
        "imageRatio": "mixed",
        "readingSpeed": 250,
        "description": "Alternating fast and slow to maintain engagement",
        "bestFor": ["Long documents", "Books", "Magazines"],
        "breathingPointInterval": 200
      }
    },
    "densityThresholds": {
      "sparse": { "max": 0.3, "label": "Very spacious" },
      "balanced": { "min": 0.3, "max": 0.5, "label": "Well balanced" },
      "dense": { "min": 0.5, "max": 0.7, "label": "Content-rich" },
      "very-dense": { "min": 0.7, "label": "Very dense" }
    },
    "whitespaceTargets": {
      "minimal": { "ratio": 0.2, "description": "20% whitespace" },
      "comfortable": { "ratio": 0.35, "description": "35% whitespace (optimal)" },
      "generous": { "ratio": 0.5, "description": "50% whitespace" },
      "abundant": { "ratio": 0.65, "description": "65% whitespace" }
    }
  },

  "transitions": {
    "types": {
      "subtle": {
        "name": "Subtle Transition",
        "description": "Gentle flow between similar emotional states",
        "technique": "color-gradient",
        "duration": "short",
        "visualChange": "minimal"
      },
      "amplifying": {
        "name": "Amplifying Transition",
        "description": "Building intensity and emotional engagement",
        "technique": "progressive-reveal",
        "duration": "long",
        "visualChange": "gradual-increase"
      },
      "calming": {
        "name": "Calming Transition",
        "description": "Reducing intensity for reflection",
        "technique": "fade-dissolve",
        "duration": "medium",
        "visualChange": "gradual-decrease"
      },
      "shifting": {
        "name": "Shifting Transition",
        "description": "Moving between different emotional states",
        "technique": "cross-dissolve",
        "duration": "medium",
        "visualChange": "moderate"
      },
      "dramatic": {
        "name": "Dramatic Transition",
        "description": "Strong contrast for impact",
        "technique": "hard-cut",
        "duration": "immediate",
        "visualChange": "significant"
      }
    }
  },

