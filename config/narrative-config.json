  "emotionalJourneys": {
    "persuasion": {
      "name": "Persuasion Journey",
      "stages": [
        { "emotion": "concern", "description": "Identify problem", "duration": "short" },
        { "emotion": "urgency", "description": "Amplify need", "duration": "short" },
        { "emotion": "hope", "description": "Present solution", "duration": "medium" },
        { "emotion": "trust", "description": "Build credibility", "duration": "medium" },
        { "emotion": "empowerment", "description": "Call to action", "duration": "short" }
      ],
      "totalIntensity": "building",
      "bestFor": ["Sales", "Proposals", "Persuasive content"]
    },
    "transformation": {
      "name": "Transformation Journey",
      "stages": [
