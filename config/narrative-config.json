  "metrics": {
    "quality": {
      "excellent": { "min": 8.0, "label": "Exceptional quality" },
      "good": { "min": 6.0, "max": 8.0, "label": "High quality" },
      "acceptable": { "min": 4.0, "max": 6.0, "label": "Adequate quality" },
      "needs-work": { "max": 4.0, "label": "Requires improvement" }
    },
    "resonance": {
      "excellent": { "min": 8.0, "description": "Strong emotional connection" },
      "good": { "min": 6.0, "description": "Clear emotional journey" },
      "acceptable": { "min": 4.0, "description": "Some emotional impact" },
      "weak": { "max": 4.0, "description": "Limited emotional resonance" }
    },
    "engagement": {
      "high": { "min": 7.0, "indicators": ["Varied pacing", "Clear narrative", "Strong emotions"] },
      "medium": { "min": 5.0, "indicators": ["Moderate pacing", "Some variety"] },
      "low": { "max": 5.0, "indicators": ["Monotonous", "No clear arc"] }
    }
  },

  "models_in_use": ["Claude Opus 4.5", "Gemini Pro 3.0", "GPT-5.1"],
  "ai": {
    "enabled": true,
    "models": {
      "primary": "claude-opus-4.5",
      "fallback": "gemini-pro-3.0"
    },
    "thinkingBudget": 10000,
    "optimization": {
      "narrativeCritique": true,
      "emotionalMapping": true,
      "pacingAnalysis": true,
      "transitionSuggestions": true
    }
  },

