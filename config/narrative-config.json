{
  "name": "Narrative Configuration",
  "version": "1.0.0",
  "description": "Configuration for visual storytelling and narrative systems",

  "storyArcs": {
    "default": "classic",
    "templates": {
      "classic": {
        "name": "Classic 5-Act Structure",
        "stages": ["exposition", "rising", "climax", "falling", "resolution"],
        "description": "Traditional narrative structure (Freytag's Pyramid)",
        "bestFor": ["General purpose", "Educational content", "Reports"],
        "duration": "5-10 pages",
        "intensity": {
          "exposition": 0.6,
          "rising": 0.7,
          "climax": 1.0,
          "falling": 0.5,
          "resolution": 0.8
        }
      },
      "hero": {
        "name": "Hero's Journey",
        "stages": [
          "ordinary-world",
          "call-to-adventure",
          "refusal",
          "mentor",
          "threshold",
          "tests",
          "ordeal",
          "reward",
          "road-back",
          "resurrection",
          "return",
          "master"
        ],
        "description": "Joseph Campbell's monomyth (12 stages)",
        "bestFor": ["Transformation stories", "Case studies", "Long-form content"],
        "duration": "12-20 pages"
      },
      "problemSolution": {
        "name": "Problem-Solution-Benefit",
        "stages": ["problem", "agitation", "solution", "proof", "call-to-action"],
        "description": "Marketing and persuasion framework (PAS)",
        "bestFor": ["Partnership proposals", "Sales documents", "Persuasive content"],
        "duration": "4-6 pages",
        "intensity": {
          "problem": 0.6,
          "agitation": 0.9,
          "solution": 1.0,
          "proof": 0.8,
          "call-to-action": 1.0
        }
      },
      "beforeAfter": {
        "name": "Before-After-Bridge",
        "stages": ["before", "after", "bridge", "call-to-action"],
        "description": "Show the transformation clearly",
        "bestFor": ["Case studies", "Impact reports", "Success stories"],
        "duration": "4-5 pages"
      },
      "educational": {
        "name": "Educational Arc",
        "stages": ["hook", "background", "concepts", "application", "summary", "next-steps"],
        "description": "Learning-focused structure",
        "bestFor": ["White papers", "Guides", "Tutorials"],
        "duration": "6-10 pages"
      }
    }
  },

