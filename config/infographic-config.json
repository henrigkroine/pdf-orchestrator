{
  "name": "Infographic Generator Configuration",
  "version": "1.0.0",
  "description": "Configuration for AI-powered infographic generation system",

  "defaults": {
    "chartSize": "fullPage",
    "chartStyle": "flat",
    "colorScheme": "warm-professional",
    "withStory": false,
    "withIcons": false,
    "exportFormat": "svg"
  },

  "chartSizes": {
    "fullPage": {
      "width": 1200,
      "height": 800,
      "description": "Full page infographic",
      "bestFor": "Standalone visualizations, reports"
    },
    "halfPage": {
      "width": 580,
      "height": 400,
      "description": "Half page size",
      "bestFor": "Document sections, presentations"
    },
    "square": {
      "width": 600,
      "height": 600,
      "description": "Square format",
      "bestFor": "Social media, balanced compositions"
    },
    "wide": {
      "width": 1200,
      "height": 400,
      "description": "Wide format",
      "bestFor": "Timelines, trends, headers"
    },
    "tall": {
      "width": 400,
      "height": 800,
      "description": "Vertical format",
      "bestFor": "Infographic strips, mobile"
    }
  },

  "chartTypes": {
    "comparison": {
      "types": ["bar", "column", "bullet", "spider", "lollipop"],
      "description": "Compare values across categories",
      "bestFor": "Side-by-side comparisons, rankings"
    },
    "trend": {
      "types": ["line", "area", "stream", "sparkline"],
      "description": "Show changes over time",
      "bestFor": "Time series, growth patterns"
    },
    "distribution": {
      "types": ["histogram", "box", "violin", "density"],
      "description": "Show data distribution",
      "bestFor": "Statistical analysis, ranges"
    },
    "relationship": {
      "types": ["scatter", "bubble", "heatmap", "correlation"],
      "description": "Show relationships between variables",
      "bestFor": "Multi-dimensional data, patterns"
    },
    "composition": {
      "types": ["pie", "donut", "treemap", "sunburst", "stacked"],
      "description": "Show part-to-whole relationships",
      "bestFor": "Proportions, hierarchies"
    },
    "flow": {
      "types": ["sankey", "chord", "network", "alluvial"],
      "description": "Show flows and connections",
      "bestFor": "Process flows, relationships"
    }
  },

  "brandColors": {
    "primary": {
      "nordshore": "#00393F",
      "sky": "#C9E4EC",
      "sand": "#FFF1E2",
      "beige": "#EFE1DC"
    },
    "accent": {
      "moss": "#65873B",
      "gold": "#BA8F5A",
      "clay": "#913B2F"
    },
    "dataViz": {
      "sequential": ["#00393F", "#0A5560", "#1A7180", "#2B8DA0", "#3DA9C0", "#C9E4EC"],
      "diverging": ["#913B2F", "#BA8F5A", "#FFF1E2", "#65873B", "#00393F"],
      "categorical": ["#00393F", "#BA8F5A", "#65873B", "#C9E4EC", "#913B2F", "#FFF1E2"]
    }
  },

  "typography": {
    "title": {
      "family": "Lora",
      "weight": 700,
      "size": 32,
      "lineHeight": 1.2
    },
    "subtitle": {
      "family": "Lora",
      "weight": 600,
      "size": 24,
      "lineHeight": 1.3
    },
    "heading": {
      "family": "Lora",
      "weight": 600,
      "size": 18,
      "lineHeight": 1.4
    },
    "body": {
      "family": "Roboto Flex",
      "weight": 400,
      "size": 14,
      "lineHeight": 1.5
    },
    "label": {
      "family": "Roboto Flex",
      "weight": 500,
      "size": 12,
      "lineHeight": 1.4
    },
    "caption": {
      "family": "Roboto Flex",
      "weight": 400,
      "size": 10,
      "lineHeight": 1.5
    }
  },

  "layout": {
    "margins": {
      "default": {
        "top": 60,
        "right": 80,
        "bottom": 60,
        "left": 80
      },
      "compact": {
        "top": 40,
        "right": 40,
        "bottom": 40,
        "left": 40
      }
    },
    "gridlines": {
      "show": true,
      "color": "#E5E5E5",
      "dasharray": "2,2"
    },
    "legend": {
      "position": "right",
      "itemSpacing": 12,
      "symbolSize": 12
    }
  },

  "export": {
    "svg": {
      "quality": "high",
      "preserveAspectRatio": true
    },
    "png": {
      "dpi": 300,
      "quality": 95,
      "background": "white"
    },
    "pdf": {
      "dpi": 300,
      "compression": true
    }
  },

  "aiSettings": {
    "openai": {
      "model": "gpt-4o",
      "temperature": 0.3,
      "maxTokens": 1000
    },
    "anthropic": {
      "model": "claude-opus-4-20250514",
      "temperature": 0.3,
      "maxTokens": 4000,
      "thinking": {
        "enabled": true,
        "budgetTokens": 3000
      }
    }
  },

  "storytelling": {
    "frameworks": [
      "problem-solution",
      "before-after",
      "journey",
      "comparison",
      "trend"
    ],
    "generateInsights": true,
    "generateNarrative": true,
    "maxInsights": 7
  },

  "icons": {
    "style": "flat",
    "colorScheme": "warm",
    "size": 512,
    "format": "png"
  },

  "performance": {
    "maxDataPoints": 1000,
    "cacheEnabled": true,
    "parallelProcessing": true
  }
}
