# Adobe PDF Services API
ADOBE_CLIENT_ID=your_client_id_here
ADOBE_CLIENT_SECRET=your_client_secret_here
ADOBE_ORGANIZATION_ID=your_org_id_here

# Cloudflare R2 Storage
R2_ACCOUNT_ID=your_account_id_here
R2_ACCESS_KEY_ID=your_access_key_here
R2_SECRET_ACCESS_KEY=your_secret_key_here
R2_ENDPOINT_URL=https://your_account_id.r2.cloudflarestorage.com

# R2 Buckets
R2_BUCKET_OUTPUTS=pdf-outputs
R2_BUCKET_SOURCE=assets-source
R2_BUCKET_RENDITIONS=assets-renditions

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8012
MCP_SERVER_PROTOCOL=http

# Orchestrator Settings
ORCHESTRATOR_PORT=3000
LOG_LEVEL=info
TEMPLATE_REGISTRY_PATH=../templates/template-registry.json

# AI Model Configuration (for intelligent routing)
AI_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini AI (Vision and Analysis)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI (Image Generation and GPT)
OPENAI_API_KEY=your_openai_api_key_here

# Artificio AI (Image Generation)
ARTIFICIO_API_KEY=your_artificio_api_key_here
ARTIFICIO_BASE_URL=https://platform.artificio.ai/

# Unsplash API (Stock Photography)
UNSPLASH_APPLICATION_ID=your_application_id_here
UNSPLASH_ACCESS_KEY=your_access_key_here
UNSPLASH_SECRET_KEY=your_secret_key_here

# Adobe Express Embed SDK
ADOBE_EXPRESS_API_KEY=your_adobe_express_api_key_here
ADOBE_EXPRESS_CLIENT_ID=your_adobe_express_client_id_here

# Adobe Lightroom Services (OAuth Web App)
ADOBE_LIGHTROOM_CLIENT_ID=your_lightroom_client_id_here
ADOBE_LIGHTROOM_API_KEY=your_lightroom_api_key_here

# Adobe API Mesh for App Builder
ADOBE_API_MESH_CLIENT_ID=your_api_mesh_client_id_here
ADOBE_API_MESH_API_KEY=your_api_mesh_api_key_here

# Resend Email (Alerts and Notifications)
RESEND_API_KEY=your_resend_api_key_here
ALERT_FROM=alerts@yourpersonalai.net
ALERT_TO=your_email@yourpersonalai.net
ALERT_ENV=Production
ENABLE_RESEND_ALERTS=true
