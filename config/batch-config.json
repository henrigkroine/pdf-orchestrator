{
  "version": "1.0.0",
  "description": "Batch processing configuration for AI Vision PDF validation",

  "processing": {
    "concurrency": 5,
    "defaultConcurrency": 5,
    "maxConcurrency": 20,
    "minConcurrency": 1,
    "workerTimeout": 120000,
    "retryAttempts": 3,
    "retryDelay": 1000
  },

  "cache": {
    "enabled": true,
    "ttl": 604800000,
    "directory": ".cache/validations",
    "autoCleanup": true,
    "cleanupInterval": 86400000,
    "maxCacheSize": 1073741824
  },

  "output": {
    "formats": ["html", "json", "csv"],
    "directory": "batch-reports",
    "includeTempFiles": false,
    "autoCleanupTemp": true,
    "reportNaming": "batch-report-{timestamp}",
    "timestampFormat": "unix"
  },

  "progress": {
    "enabled": true,
    "updateInterval": 500,
    "showCacheStats": true,
    "showThroughput": true,
    "showETA": true,
    "width": 40
  },

  "validation": {
    "model": "gemini-1.5-flash",
    "temperature": 0.1,
    "maxTokens": 4096,
    "timeout": 60000,
    "imageScale": 3.0,
    "imageFormat": "png"
  },

  "performance": {
    "optimizeCacheWarming": true,
    "parallelConversion": true,
    "batchSize": 10,
    "memoryLimit": 2147483648,
    "cpuThreshold": 0.9
  },

  "quality": {
    "passThreshold": 8.0,
    "minAcceptableScore": 6.0,
    "criticalViolationThreshold": 3,
    "autoFlagLowScores": true,
    "requireHumanReview": false
  },

  "alerts": {
    "enabled": false,
    "emailNotifications": false,
    "slackWebhook": null,
    "alertOnFailure": true,
    "alertOnCompletion": false,
    "alertThreshold": 5
  },

  "logging": {
    "level": "info",
    "outputToFile": false,
    "logDirectory": "logs",
    "maxLogSize": 10485760,
    "retainLogs": 30
  },

  "advanced": {
    "enableExperimentalFeatures": false,
    "debugMode": false,
    "verboseOutput": false,
    "profilePerformance": false,
    "collectMetrics": true,
    "metricsEndpoint": null
  }
}
