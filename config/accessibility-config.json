{
  "wcagVersion": "2.2",
  "level": "AAA",
  "description": "WCAG 2.2 Level AAA compliance configuration for TEEI PDF documents with AI-powered validation",

  "models_in_use": ["Claude Opus 4.5", "Gemini Pro 3.0", "GPT-5.1"],
  "aiModels": {
    "altTextGeneration": {
      "model": "gpt-5.1",
      "temperature": 0.3,
      "maxTokens": 150,
      "description": "Generate and assess alt text quality"
    },
    "readabilityAnalysis": {
      "model": "claude-opus-4.5",
      "temperature": 0.2,
      "maxTokens": 500,
      "description": "Analyze readability and plain language"
    },
    "structureValidation": {
      "model": "claude-opus-4.5",
      "temperature": 0.1,
      "maxTokens": 300,
      "description": "Validate document structure and semantics"
    },
    "cognitiveAccessibility": {
      "model": "gpt-5.1",
      "temperature": 0.2,
      "maxTokens": 400,
      "description": "Assess cognitive load and memory demands"
    },
    "internationalAccessibility": {
      "model": "gemini-pro-3.0",
      "temperature": 0.2,
      "maxTokens": 300,
      "description": "Validate international and cultural accessibility"
    },
    "colorHarmony": {
      "model": "gpt-5.1",
      "temperature": 0.3,
      "maxTokens": 200,
      "description": "Balance color harmony with accessibility"
    }
  },

  "wcagSuccessCriteria": {
    "principle1": {
      "name": "Perceivable",
      "description": "Information and user interface components must be presentable to users in ways they can perceive",
      "guidelines": {
        "1.1": {
          "name": "Text Alternatives",
          "criteria": {
            "1.1.1": {
              "level": "A",
              "name": "Non-text Content",
              "description": "All non-text content has text alternative",
              "automated": true,
              "aiEnhanced": true,
              "tests": ["altTextPresence", "altTextQuality", "decorativeImageCheck"]
            }
          }
        },
        "1.2": {
          "name": "Time-based Media",
          "criteria": {
            "1.2.1": {
              "level": "A",
              "name": "Audio-only and Video-only (Prerecorded)",
              "description": "Alternatives for prerecorded audio-only and video-only media",
              "automated": false,
              "tests": ["mediaAlternativeCheck"]
            },
            "1.2.2": {
              "level": "A",
              "name": "Captions (Prerecorded)",
              "description": "Captions for prerecorded audio in synchronized media",
              "automated": false,
              "tests": ["captionPresenceCheck"]
            },
            "1.2.3": {
              "level": "A",
              "name": "Audio Description or Media Alternative (Prerecorded)",
              "description": "Audio description or media alternative for prerecorded video",
              "automated": false,
              "tests": ["audioDescriptionCheck"]
            },
            "1.2.4": {
              "level": "AA",
              "name": "Captions (Live)",
              "description": "Captions for live audio in synchronized media",
              "automated": false,
              "tests": []
            },
            "1.2.5": {
              "level": "AA",
              "name": "Audio Description (Prerecorded)",
              "description": "Audio description for prerecorded video",
              "automated": false,
              "tests": []
            },
            "1.2.6": {
              "level": "AAA",
              "name": "Sign Language (Prerecorded)",
              "description": "Sign language interpretation for prerecorded audio",
              "automated": false,
              "tests": []
            },
            "1.2.7": {
              "level": "AAA",
              "name": "Extended Audio Description (Prerecorded)",
              "description": "Extended audio description for prerecorded video",
              "automated": false,
              "tests": []
            },
            "1.2.8": {
              "level": "AAA",
              "name": "Media Alternative (Prerecorded)",
              "description": "Media alternative for prerecorded synchronized media",
              "automated": false,
              "tests": []
            },
            "1.2.9": {
              "level": "AAA",
              "name": "Audio-only (Live)",
              "description": "Alternative for live audio-only content",
              "automated": false,
              "tests": []
            }
          }
        },
        "1.3": {
          "name": "Adaptable",
          "criteria": {
            "1.3.1": {
              "level": "A",
              "name": "Info and Relationships",
              "description": "Information, structure, and relationships can be programmatically determined",
              "automated": true,
              "aiEnhanced": true,
              "tests": ["headingHierarchy", "listStructure", "tableStructure", "pdfTags"]
            },
            "1.3.2": {
              "level": "A",
              "name": "Meaningful Sequence",
              "description": "Correct reading sequence can be programmatically determined",
              "automated": true,
              "tests": ["readingOrder", "tabOrder"]
            },
            "1.3.3": {
              "level": "A",
              "name": "Sensory Characteristics",
              "description": "Instructions don't rely solely on sensory characteristics",
              "automated": false,
              "aiEnhanced": true,
              "tests": ["sensoryInstructionCheck"]
            },
            "1.3.4": {
              "level": "AA",
              "name": "Orientation",
              "description": "Content not restricted to single display orientation",
              "automated": false,
              "tests": []
            },
            "1.3.5": {
              "level": "AA",
              "name": "Identify Input Purpose",
              "description": "Input purpose can be programmatically determined",
              "automated": true,
              "tests": ["formFieldLabels", "inputPurpose"]
            },
            "1.3.6": {
              "level": "AAA",
              "name": "Identify Purpose",
              "description": "Purpose of UI components can be programmatically determined",
              "automated": true,
              "tests": ["componentPurpose", "landmarkRoles"]
            }
          }
        },
        "1.4": {
          "name": "Distinguishable",
          "criteria": {
            "1.4.1": {
              "level": "A",
              "name": "Use of Color",
              "description": "Color not used as only visual means of conveying information",
              "automated": false,
              "aiEnhanced": true,
              "tests": ["colorDependencyCheck"]
            },
            "1.4.2": {
              "level": "A",
              "name": "Audio Control",
              "description": "Mechanism to pause or stop audio",
              "automated": false,
              "tests": []
            },
            "1.4.3": {
              "level": "AA",
              "name": "Contrast (Minimum)",
              "description": "4.5:1 contrast ratio for normal text, 3:1 for large text",
              "automated": true,
              "tests": ["contrastAA"]
            },
            "1.4.4": {
              "level": "AA",
              "name": "Resize Text",
              "description": "Text can be resized up to 200% without loss of content",
              "automated": true,
              "tests": ["textResize", "textCutoffCheck"]
            },
            "1.4.5": {
              "level": "AA",
              "name": "Images of Text",
              "description": "Use actual text rather than images of text",
              "automated": false,
              "aiEnhanced": true,
              "tests": ["textImageCheck"]
            },
            "1.4.6": {
              "level": "AAA",
              "name": "Contrast (Enhanced)",
              "description": "7:1 contrast ratio for normal text, 4.5:1 for large text",
              "automated": true,
              "tests": ["contrastAAA"]
            },
            "1.4.7": {
              "level": "AAA",
              "name": "Low or No Background Audio",
              "description": "Audio has minimal background sounds",
              "automated": false,
              "tests": []
            },
            "1.4.8": {
              "level": "AAA",
              "name": "Visual Presentation",
              "description": "Visual presentation can be customized",
              "automated": true,
              "tests": ["lineLength", "textAlignment", "lineHeight", "paragraphSpacing"]
            },
            "1.4.9": {
              "level": "AAA",
              "name": "Images of Text (No Exception)",
              "description": "Images of text only for decoration or essential",
              "automated": false,
              "aiEnhanced": true,
              "tests": ["textImageStrictCheck"]
            },
            "1.4.10": {
              "level": "AA",
              "name": "Reflow",
              "description": "Content reflows without horizontal scrolling at 320px",
              "automated": false,
              "tests": []
            },
            "1.4.11": {
              "level": "AA",
              "name": "Non-text Contrast",
              "description": "3:1 contrast ratio for UI components and graphics",
              "automated": true,
              "tests": ["graphicsContrast", "uiComponentContrast"]
            },
            "1.4.12": {
              "level": "AA",
              "name": "Text Spacing",
              "description": "No loss of content when text spacing adjusted",
              "automated": true,
              "tests": ["textSpacing"]
            },
            "1.4.13": {
              "level": "AA",
              "name": "Content on Hover or Focus",
              "description": "Additional content on hover/focus is dismissible, hoverable, persistent",
              "automated": false,
              "tests": []
            }
          }
        }
      }
    },
    "principle2": {
      "name": "Operable",
      "description": "User interface components and navigation must be operable",
      "guidelines": {
        "2.1": {
          "name": "Keyboard Accessible",
          "criteria": {
            "2.1.1": {
              "level": "A",
              "name": "Keyboard",
              "description": "All functionality available from keyboard",
              "automated": false,
              "tests": ["keyboardAccessibility"]
            },
            "2.1.2": {
              "level": "A",
              "name": "No Keyboard Trap",
              "description": "Keyboard focus can move away from component",
              "automated": false,
              "tests": ["keyboardTrapCheck"]
            },
            "2.1.3": {
              "level": "AAA",
              "name": "Keyboard (No Exception)",
              "description": "All functionality available from keyboard without timing",
              "automated": false,
              "tests": []
            },
            "2.1.4": {
              "level": "A",
              "name": "Character Key Shortcuts",
              "description": "Single character shortcuts can be turned off or remapped",
              "automated": false,
              "tests": []
            }
          }
        },
        "2.2": {
          "name": "Enough Time",
          "criteria": {
            "2.2.1": {
              "level": "A",
              "name": "Timing Adjustable",
              "description": "User can adjust time limits",
              "automated": false,
              "tests": []
            },
            "2.2.2": {
              "level": "A",
              "name": "Pause, Stop, Hide",
              "description": "User can pause, stop, or hide moving content",
              "automated": false,
              "tests": []
            },
            "2.2.3": {
              "level": "AAA",
              "name": "No Timing",
              "description": "No time limits on content",
              "automated": false,
              "tests": []
            },
            "2.2.4": {
              "level": "AAA",
              "name": "Interruptions",
              "description": "Interruptions can be postponed or suppressed",
              "automated": false,
              "tests": []
            },
            "2.2.5": {
              "level": "AAA",
              "name": "Re-authenticating",
              "description": "User can re-authenticate without data loss",
              "automated": false,
              "tests": []
            },
            "2.2.6": {
              "level": "AAA",
              "name": "Timeouts",
              "description": "Users warned of timeout causing data loss",
              "automated": false,
              "tests": []
            }
          }
        },
        "2.3": {
          "name": "Seizures and Physical Reactions",
          "criteria": {
            "2.3.1": {
              "level": "A",
              "name": "Three Flashes or Below Threshold",
              "description": "No content flashes more than 3 times per second",
              "automated": false,
              "tests": []
            },
            "2.3.2": {
              "level": "AAA",
              "name": "Three Flashes",
              "description": "No content flashes more than 3 times per second (no exceptions)",
              "automated": false,
              "tests": []
            },
            "2.3.3": {
              "level": "AAA",
              "name": "Animation from Interactions",
              "description": "Motion animation can be disabled",
              "automated": false,
              "tests": []
            }
          }
        },
        "2.4": {
          "name": "Navigable",
          "criteria": {
            "2.4.1": {
              "level": "A",
              "name": "Bypass Blocks",
              "description": "Mechanism to bypass repeated blocks",
              "automated": true,
              "tests": ["skipLinks", "landmarks"]
            },
            "2.4.2": {
              "level": "A",
              "name": "Page Titled",
              "description": "Pages have descriptive titles",
              "automated": true,
              "tests": ["documentTitle"]
            },
            "2.4.3": {
              "level": "A",
              "name": "Focus Order",
              "description": "Focus order preserves meaning and operability",
              "automated": true,
              "tests": ["focusOrder", "tabOrder"]
            },
            "2.4.4": {
              "level": "A",
              "name": "Link Purpose (In Context)",
              "description": "Purpose of link determined from link text or context",
              "automated": false,
              "aiEnhanced": true,
              "tests": ["linkPurposeCheck"]
            },
            "2.4.5": {
              "level": "AA",
              "name": "Multiple Ways",
              "description": "Multiple ways to locate pages",
              "automated": false,
              "tests": []
            },
            "2.4.6": {
              "level": "AA",
              "name": "Headings and Labels",
              "description": "Headings and labels describe topic or purpose",
              "automated": false,
              "aiEnhanced": true,
              "tests": ["headingQuality", "labelQuality"]
            },
            "2.4.7": {
              "level": "AA",
              "name": "Focus Visible",
              "description": "Keyboard focus indicator visible",
              "automated": true,
              "tests": ["focusIndicator"]
            },
            "2.4.8": {
              "level": "AAA",
              "name": "Location",
              "description": "Information about user's location within set of pages",
              "automated": false,
              "tests": []
            },
            "2.4.9": {
              "level": "AAA",
              "name": "Link Purpose (Link Only)",
              "description": "Purpose determined from link text alone",
              "automated": false,
              "aiEnhanced": true,
              "tests": ["linkPurposeStrictCheck"]
            },
            "2.4.10": {
              "level": "AAA",
              "name": "Section Headings",
              "description": "Section headings organize content",
              "automated": true,
              "aiEnhanced": true,
              "tests": ["sectionHeadingCheck"]
            },
            "2.4.11": {
              "level": "AA",
              "name": "Focus Not Obscured (Minimum)",
              "description": "Focused component not entirely hidden",
              "automated": false,
              "tests": []
            },
            "2.4.12": {
              "level": "AAA",
              "name": "Focus Not Obscured (Enhanced)",
              "description": "Focused component not hidden at all",
              "automated": false,
              "tests": []
            },
            "2.4.13": {
              "level": "AAA",
              "name": "Focus Appearance",
              "description": "Focus indicator meets size and contrast requirements",
              "automated": true,
              "tests": ["focusAppearance"]
            }
          }
        },
        "2.5": {
          "name": "Input Modalities",
          "criteria": {
            "2.5.1": {
              "level": "A",
              "name": "Pointer Gestures",
              "description": "Multipoint or path-based gestures have single-pointer alternative",
              "automated": false,
              "tests": []
            },
            "2.5.2": {
              "level": "A",
              "name": "Pointer Cancellation",
              "description": "Functions can be cancelled before completion",
              "automated": false,
              "tests": []
            },
            "2.5.3": {
              "level": "A",
              "name": "Label in Name",
              "description": "Visible label is part of accessible name",
              "automated": true,
              "tests": ["labelInName"]
            },
            "2.5.4": {
              "level": "A",
              "name": "Motion Actuation",
              "description": "Functions triggered by motion can be operated by UI components",
              "automated": false,
              "tests": []
            },
            "2.5.5": {
              "level": "AAA",
              "name": "Target Size (Enhanced)",
              "description": "Target size at least 44x44 CSS pixels",
              "automated": true,
              "tests": ["touchTargetAAA"]
            },
            "2.5.6": {
              "level": "AAA",
              "name": "Concurrent Input Mechanisms",
              "description": "Content doesn't restrict use of input modalities",
              "automated": false,
              "tests": []
            },
            "2.5.7": {
              "level": "AAA",
              "name": "Dragging Movements",
              "description": "Dragging movements have single-pointer alternative",
              "automated": false,
              "tests": []
            },
            "2.5.8": {
              "level": "AA",
              "name": "Target Size (Minimum)",
              "description": "Target size at least 24x24 CSS pixels",
              "automated": true,
              "tests": ["touchTargetAA"]
            }
          }
        }
      }
    },
    "principle3": {
      "name": "Understandable",
      "description": "Information and operation of user interface must be understandable",
      "guidelines": {
        "3.1": {
          "name": "Readable",
          "criteria": {
            "3.1.1": {
              "level": "A",
              "name": "Language of Page",
              "description": "Default language can be programmatically determined",
              "automated": true,
              "tests": ["languageAttribute"]
            },
            "3.1.2": {
              "level": "AA",
              "name": "Language of Parts",
              "description": "Language of passages can be programmatically determined",
              "automated": true,
              "tests": ["languageOfParts"]
            },
            "3.1.3": {
              "level": "AAA",
              "name": "Unusual Words",
              "description": "Mechanism available for unusual words",
              "automated": false,
              "aiEnhanced": true,
              "tests": ["unusualWordCheck"]
            },
            "3.1.4": {
              "level": "AAA",
              "name": "Abbreviations",
              "description": "Mechanism for identifying expanded form of abbreviations",
              "automated": false,
              "aiEnhanced": true,
              "tests": ["abbreviationCheck"]
            },
            "3.1.5": {
              "level": "AAA",
              "name": "Reading Level",
              "description": "Text requires lower secondary education reading level",
              "automated": true,
              "aiEnhanced": true,
              "tests": ["readabilityScore", "readingLevel"]
            },
            "3.1.6": {
              "level": "AAA",
              "name": "Pronunciation",
              "description": "Mechanism for pronunciation of words",
              "automated": false,
              "tests": []
            }
          }
        },
        "3.2": {
          "name": "Predictable",
          "criteria": {
            "3.2.1": {
              "level": "A",
              "name": "On Focus",
              "description": "Component doesn't change context on focus",
              "automated": false,
              "tests": []
            },
            "3.2.2": {
              "level": "A",
              "name": "On Input",
              "description": "Component doesn't change context on input",
              "automated": false,
              "tests": []
            },
            "3.2.3": {
              "level": "AA",
              "name": "Consistent Navigation",
              "description": "Navigation mechanisms consistent across pages",
              "automated": false,
              "aiEnhanced": true,
              "tests": ["navigationConsistency"]
            },
            "3.2.4": {
              "level": "AA",
              "name": "Consistent Identification",
              "description": "Components with same functionality identified consistently",
              "automated": false,
              "aiEnhanced": true,
              "tests": ["identificationConsistency"]
            },
            "3.2.5": {
              "level": "AAA",
              "name": "Change on Request",
              "description": "Changes of context initiated only by user request",
              "automated": false,
              "tests": []
            },
            "3.2.6": {
              "level": "A",
              "name": "Consistent Help",
              "description": "Help mechanisms in consistent order",
              "automated": false,
              "tests": []
            }
          }
        },
        "3.3": {
          "name": "Input Assistance",
          "criteria": {
            "3.3.1": {
              "level": "A",
              "name": "Error Identification",
              "description": "Input errors automatically detected and described",
              "automated": false,
              "tests": []
            },
            "3.3.2": {
              "level": "A",
              "name": "Labels or Instructions",
              "description": "Labels or instructions provided for user input",
              "automated": true,
              "tests": ["formLabels", "inputInstructions"]
            },
            "3.3.3": {
              "level": "AA",
              "name": "Error Suggestion",
              "description": "Suggestions provided for input errors",
              "automated": false,
              "tests": []
            },
            "3.3.4": {
              "level": "AA",
              "name": "Error Prevention (Legal, Financial, Data)",
              "description": "Submissions are reversible, checked, or confirmed",
              "automated": false,
              "tests": []
            },
            "3.3.5": {
              "level": "AAA",
              "name": "Help",
              "description": "Context-sensitive help available",
              "automated": false,
              "tests": []
            },
            "3.3.6": {
              "level": "AAA",
              "name": "Error Prevention (All)",
              "description": "All submissions are reversible, checked, or confirmed",
              "automated": false,
              "tests": []
            },
            "3.3.7": {
              "level": "A",
              "name": "Redundant Entry",
              "description": "Information previously entered is auto-populated",
              "automated": false,
              "tests": []
            },
            "3.3.8": {
              "level": "AA",
              "name": "Accessible Authentication (Minimum)",
              "description": "Cognitive function test not required for authentication",
              "automated": false,
              "tests": []
            },
            "3.3.9": {
              "level": "AAA",
              "name": "Accessible Authentication (Enhanced)",
              "description": "Cognitive function test not required (no exceptions)",
              "automated": false,
              "tests": []
            }
          }
        }
      }
    },
    "principle4": {
      "name": "Robust",
      "description": "Content must be robust enough for reliable interpretation by assistive technologies",
      "guidelines": {
        "4.1": {
          "name": "Compatible",
          "criteria": {
            "4.1.1": {
              "level": "A",
              "name": "Parsing",
              "description": "Content can be parsed unambiguously",
              "automated": true,
              "tests": ["pdfStructure", "validTags"]
            },
            "4.1.2": {
              "level": "A",
              "name": "Name, Role, Value",
              "description": "Name and role can be determined; states can be set",
              "automated": true,
              "tests": ["ariaAttributes", "roleValidation"]
            },
            "4.1.3": {
              "level": "AA",
              "name": "Status Messages",
              "description": "Status messages can be determined without focus",
              "automated": false,
              "tests": []
            }
          }
        }
      }
    }
  },

  "contrastRatios": {
    "aa": {
      "normalText": 4.5,
      "largeText": 3.0,
      "graphics": 3.0
    },
    "aaa": {
      "normalText": 7.0,
      "largeText": 4.5,
      "graphics": 3.0
    }
  },

  "textSizeThresholds": {
    "minimumBody": 11,
    "recommendedBody": 12,
    "minimumHeading": 14,
    "minimumCaption": 9,
    "largeTextPoint": 18,
    "largeBoldTextPoint": 14
  },

  "touchTargetSizes": {
    "aa": 24,
    "aaa": 44,
    "spacing": 8
  },

  "readabilityTargets": {
    "fleschKincaid": {
      "target": 8,
      "maximum": 10,
      "description": "Lower secondary education reading level"
    },
    "gunningFog": {
      "target": 10,
      "maximum": 12
    },
    "smog": {
      "target": 9,
      "maximum": 11
    },
    "colemanLiau": {
      "target": 8,
      "maximum": 10
    }
  },

  "textSpacing": {
    "lineHeight": 1.5,
    "paragraphSpacing": 2.0,
    "letterSpacing": 0.12,
    "wordSpacing": 0.16,
    "maxLineLength": 80
  },

  "colorBlindnessTypes": [
    "protanopia",
    "deuteranopia",
    "tritanopia",
    "protanomaly",
    "deuteranomaly",
    "tritanomaly",
    "achromatopsia",
    "achromatomaly"
  ],

  "screenReaderSettings": {
    "testReaders": ["JAWS", "NVDA", "VoiceOver", "TalkBack"],
    "announcements": {
      "images": "Image with alt text",
      "links": "Link",
      "buttons": "Button",
      "headings": "Heading level",
      "lists": "List with X items",
      "tables": "Table with X rows and Y columns"
    }
  },

  "cognitiveAccessibility": {
    "maxCognitiveLoad": 7,
    "maxMemoryItems": 5,
    "maxAttentionSpan": 20,
    "consistency": {
      "layout": true,
      "navigation": true,
      "terminology": true
    }
  },

  "pdfUA": {
    "enabled": true,
    "requirements": {
      "tagged": true,
      "logicalReadingOrder": true,
      "languageSpecified": true,
      "documentTitle": true,
      "bookmarks": false,
      "alternativeDescriptions": true,
      "expandedAbbreviations": false
    }
  },

  "severityLevels": {
    "critical": {
      "description": "Blocks access for users with disabilities",
      "examples": ["Missing alt text", "Insufficient contrast", "No keyboard access"],
      "score": 0
    },
    "major": {
      "description": "Significantly impacts usability",
      "examples": ["Poor heading hierarchy", "Small touch targets", "Complex language"],
      "score": 25
    },
    "moderate": {
      "description": "Causes inconvenience but has workarounds",
      "examples": ["Suboptimal spacing", "Minor contrast issues", "Unclear labels"],
      "score": 50
    },
    "minor": {
      "description": "Best practice violations, minimal impact",
      "examples": ["Missing landmarks", "Decorative images with alt text"],
      "score": 75
    }
  },

  "scoring": {
    "perfect": 100,
    "excellent": 95,
    "good": 90,
    "acceptable": 85,
    "needsImprovement": 70,
    "poor": 50,
    "failing": 0
  },

  "remediation": {
    "autoFixEnabled": true,
    "capabilities": [
      "generateAltText",
      "fixHeadingHierarchy",
      "improveReadingOrder",
      "addPDFTags",
      "enhanceContrast",
      "simplifyLanguage",
      "addFormLabels"
    ]
  },

  "reporting": {
    "formats": ["json", "html", "csv", "pdf"],
    "includeScreenshots": true,
    "includeAIInsights": true,
    "groupByPrinciple": true,
    "showPassedChecks": true,
    "verbosity": "detailed"
  }
}
