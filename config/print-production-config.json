      },
      "gold": {
        "name": "TEEI Gold",
        "hex": "#BA8F5A",
        "cmyk": [20, 35, 65, 15],
        "pantone": "465 C"
      },
      "sand": {
        "name": "TEEI Sand",
        "hex": "#FFF1E2",
