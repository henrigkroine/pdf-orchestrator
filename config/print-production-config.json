  "advancedPreflight": {
    "PF001": {
      "name": "Missing Fonts",
      "description": "All fonts must be embedded",
      "severity": "CRITICAL",
      "action": "Embed all fonts or convert to outlines"
    },
    "PF002": {
      "name": "Low Resolution Images",
      "description": "Images below 300 DPI at final size",
      "severity": "CRITICAL",
      "threshold": 300,
      "action": "Replace with higher resolution images"
    },
    "PF003": {
      "name": "RGB Color Space",
      "description": "RGB colors in PDF/X-1a document",
      "severity": "CRITICAL",
      "action": "Convert all colors to CMYK"
    },
    "PF004": {
      "name": "Missing Bleed",
      "description": "Insufficient or missing bleed",
      "severity": "CRITICAL",
      "threshold": 3,
      "action": "Add 3-5mm bleed on all sides"
    },
    "PF005": {
      "name": "Transparency Not Flattened",
      "description": "Live transparency in PDF/X-1a or X-3",
      "severity": "CRITICAL",
      "action": "Flatten transparency or use PDF/X-4"
    },
    "PF101": {
      "name": "High Ink Coverage",
      "description": "Total ink coverage exceeds 300%",
      "severity": "WARNING",
      "threshold": 300,
      "action": "Reduce ink coverage to prevent drying issues"
    },
    "PF102": {
      "name": "Hairline Strokes",
      "description": "Strokes thinner than 0.25pt may not print",
      "severity": "WARNING",
      "threshold": 0.25,
      "action": "Increase stroke weight to 0.25pt minimum"
    },
    "PF103": {
      "name": "Small Text Size",
      "description": "Text smaller than 6pt may be illegible",
      "severity": "WARNING",
      "threshold": 6,
      "action": "Increase text size to 6pt minimum"
    },
    "PF104": {
      "name": "White Overprint",
      "description": "White objects set to overprint (usually error)",
      "severity": "WARNING",
      "action": "Disable overprint for white objects"
    },
    "PF105": {
      "name": "Registration Color Usage",
      "description": "Registration color used for objects (should be marks only)",
      "severity": "WARNING",
      "action": "Change to appropriate color"
    },
    "PF106": {
      "name": "Upsampled Images",
      "description": "Images artificially enlarged, may appear pixelated",
      "severity": "WARNING",
      "action": "Use original high-resolution images"
    },
    "PF107": {
      "name": "Missing Color Profile",
      "description": "ICC color profile not embedded",
      "severity": "WARNING",
      "action": "Embed appropriate ICC profile"
    },
    "PF108": {
      "name": "Rich Black Usage",
      "description": "Large black areas should use rich black (C:60 M:40 Y:40 K:100)",
      "severity": "INFO",
      "action": "Use rich black for large solid areas"
    },
    "PF109": {
      "name": "Black Text Overprint",
      "description": "Black text should overprint to prevent registration issues",
      "severity": "INFO",
      "action": "Set black text to overprint"
    },
    "PF110": {
      "name": "Spot Colors Detected",
      "description": "Document contains spot colors",
      "severity": "INFO",
      "action": "Verify spot colors with printer"
    }
  },

