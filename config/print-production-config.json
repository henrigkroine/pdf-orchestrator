        "pantone": "9060 C"
      },
      "beige": {
        "name": "TEEI Beige",
        "hex": "#EFE1DC",
        "cmyk": [3, 8, 10, 0],
        "pantone": "9221 C"
      },
      "moss": {
        "name": "TEEI Moss",
        "hex": "#65873B",
